BoxLayoutExample:    # referenced to the calss 'BoxLayoutExample' => Main Interface

<BoxLayoutExample>:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    Label:
        text: "Weather App"
        font_size: self.height
        color: 1, 0.5, 0, 1
        font_name: 'Impact.ttf'
        size_hint_y: 0.1

    BoxLayout:                  
        orientation: 'horizontal'

        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height 
            orientation: 'vertical'
            size_hint_x: 0.5
            padding: 20

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'City'

                TextInput:
                    id: city
                    #size_hint_y: 0.5
                    hint_text: "Wangen"
                    text: "Wangen"

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'State (token)'

                TextInput:
                    id: state
                    #size_hint_y: 0.5
                    hint_text: "BW"
                    text: "BW"

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Country'

                TextInput:
                    id: country
                    #size_hint_y: 0.5
                    hint_text: "Germany"
                    text: "Germany"

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.5
                size_hint_x: 0.8
                pos_hint: {'center_x': 0.5,'center_y': 0.5}

                Button:
                    text: "Search"
                    on_press: root.on_button_click(self, city.text, state.text, country.text)

                Button:
                    text: "Application Quit"
                    on_press: app.stop()

        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height 
            orientation: 'vertical'
            size_hint_x: 0.5
            padding: 20



            AsyncImage:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height 

                size_hint_y: 2
                source: "https://openweathermap.org/img/wn/{}@2x.png".format(root.my_image)

            Label:
                text: "Main:    " + root.my_clouds
            Label:
                text: "Clouds:    " + root.my_description
            Label:
                text: "Temperature:    " + root.my_temperature + " Â°C"
            Label:
                text: "Humidity:    " + root.my_humidity + " %"
            Label:
                text: "Wind:    " + root.my_wind + " km/h"
            Label:
                text: "Rain:    " + root.my_rain + " %"



            
    Label:
        id: appStatusLabel
        text: "App Status    >>>    " + root.my_appStatus + "    <<<"
        size_hint_y: 0.05
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 1.5
                rectangle: self.x, self.y, self.width, self.height